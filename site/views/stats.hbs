	ga('send', 'pageview');
	</script>
	<link rel="stylesheet" href="assets/css/style.css" />
	<link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
	<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
	<script async src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
	<script async defer src="assets/js/main.js"></script>
	<script async defer src="assets/js/stats.js"></script>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Oxyl - Stats</title>

	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="author" content="minemidnight" />
	<meta property="og:title" content="Oxyl Statistics" />
	<meta property="og:site_name" content="Oxyl" />
	<meta property="og:description" content="A multipurpose discord bot with with features from music to moderation" />
	<meta property="og:image" content="assets/images/oxyl-logo.jpg" />
</head>
<body class="w3-darknotblack">
	<nav id="main-nav" class="w3-card-2 w3-sidenav w3-collapse w3-notquiteblack w3-animate-left">
		<a class="w3-xxlarge w3-hide-large w3-text-red" style="position:absolute;right:10%" onclick="toggleNav()">&times;</a>
		<h1 class="w3-xxxlarge w3-center">Oxyl</h1>
		<a class="w3-padding" href="/">Home</a>
		<a class="w3-padding" href="commands">Commands</a>
		<a class="w3-padding" href="tags">Tag Documentation</a>
		<a id="current-nav" class="w3-padding" href="stats">Statistics</a>
		<a class="w3-padding" href="select">Guild Dashboard</a>
		<div style="position:absolute;bottom:0;width:100%">
		{{#if user}}
			<p class="w3-center w3-large">
				<img class="w3-circle" style="max-height:36px;vertical-align:text-bottom" src="https://cdn.discordapp.com/avatars/{{user.id}}/{{user.avatar}}.jpg" />
				{{user.username}}#{{user.discriminator}}
			</p>
		{{else}}
			<a class="w3-padding" href="https://discordapp.com/oauth2/authorize?response_type=code&redirect_uri=https://minemidnight.work/login&scope=identify+guilds&client_id=255832257519026178">Login with Discord</a>
		{{/if}}
		</div>
	</nav>
	<div class="w3-overlay w3-animate-opacity" onclick="toggleNav()"></div>
	<main class="w3-main" style="margin-left:300px">
		<header class="w3-container w3-center">
			<span class="w3-btn w3-black w3-round-jumbo w3-large w3-hide-large" style="position:fixed;left:20px;top:20px" onclick="toggleNav()">&#9776;</span>
			<h1 class="w3-clear w3-jumbo w3-margin-0">Statistics</h1>
		</header>
		<div class="w3-row-padding w3-center w3-container">
			<div class="w3-row-padding w3-xxxlarge w3-rest w3-container" id="stats-display">
				<style>
					i{width:55px;vertical-align:bottom;}
					span{background:white;color:#2C2F33;font-weight:500;border-radius:15px;padding:0 5px}
				</style>
				<ul class="w3-ul">
					<li>
						<i class="material-icons">assessment</i>
						Guilds (Servers): <span>{{guildCount}}</span>
					</li>
					<li>
						<i class="material-icons">account_circle</i>
						Users: <span>{{userCount}}</span>
					</li>
					<li>
						<i class="material-icons">textsms</i>
						Channels: <span>{{channelCount}}</span>
					</li>
					<li>
						<i class="material-icons">cloud_circle</i>
						Memory Usage: <span>{{memory.used}} / {{memory.total}} ({{memory.percent}})</span>
					</li>
					<li>
						<i class="material-icons">access_time</i>
						Uptime: <span class="uptime">{{startTime}}</span>
					</li>
					<li>
						<i class="material-icons">settings_input_composite</i>
						Shards: <span>{{shardCount}}</span>
					</li>
				</ul>
			</div>
		</div>
	</main>
</body>
</html>
