	<link rel="stylesheet" href="assets/css/style.css" />
	<link rel="stylesheet" href="assets/css/w3.css">
	<script async src="assets/js/jquery.min.js"></script>
	<script async defer src="assets/js/main.js"></script>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Oxyl - Server Selector</title>

	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="author" content="minemidnight" />
	<meta property="og:title" content="Oxyl Server Selection" />
	<meta property="og:site_name" content="Oxyl" />
	<meta property="og:description" content="A multipurpose discord bot with with features from music to moderation" />
	<meta property="og:image" content="assets/images/oxyl-logo.jpg" />
</head>
<body class="w3-darknotblack">
	<nav id="main-nav" class="w3-card-2 w3-sidenav w3-collapse w3-notquiteblack w3-animate-left">
		<a class="w3-xxlarge w3-hide-large w3-text-red" style="position:absolute;right:10%" onclick="toggleNav()">&times;</a>
		<h1 class="w3-xxxlarge w3-center">Oxyl</h1>
		<a class="w3-padding" href="/">Home</a>
		<a class="w3-padding" href="commands">Commands</a>
		<a class="w3-padding" href="tags">Tag Documentation</a>
		<a class="w3-padding" href="stats">Statistics</a>
		<a id="current-nav" class="w3-padding" href="select">Guild Dashboard</a>
		<div style="position:absolute;bottom:0;width:100%">
		{{#if user}}
			<a href="http://minemidnight.work/user/{{user.id}}">
				<p class="w3-center w3-large">
					<img class="w3-circle" style="max-height:36px;vertical-align:text-bottom" src="https://cdn.discordapp.com/avatars/{{user.id}}/{{user.avatar}}.jpg" />
					{{user.username}}#{{user.discriminator}}
				</p>
			</a>
		{{else}}
			<a class="w3-padding" href="https://discordapp.com/oauth2/authorize?response_type=code&redirect_uri=https://minemidnight.work/login&scope=identify+guilds&client_id=255832257519026178">Login with Discord</a>
		{{/if}}
		</div>
	</nav>
	<div class="w3-overlay w3-animate-opacity" onclick="toggleNav()"></div>
	<main class="w3-main w3-center" style="margin-left:300px">
		<header class="w3-container">
			<span class="w3-btn w3-black w3-round-jumbo w3-large w3-hide-large" style="position:fixed;left:20px;top:20px;z-index:5" onclick="toggleNav()">&#9776;</span>
			<h1 class="w3-clear w3-jumbo w3-margin-0">Guild Dashboard</h1>
		</header>
		{{#if guilds}}
		<h3 class="w3-xxlarge">Select a server</h3>
		<div class="w3-container">
			{{#each guilds}}
			<div class="w3-row w3-card w3-notquiteblack w3-margin w3-round" style="cursor:pointer" onclick="window.location.pathname='/guild/{{this.id}}'">
				{{#if this.icon}}
				<img class="w3-left w3-circle w3-margin" style="width:75px" src="https://cdn.discordapp.com/icons/{{this.id}}/{{this.icon}}.jpg" />
				{{else}}
				<p class="w3-xlarge w3-left w3-circle w3-margin" style="background-color:rgb(46, 49, 54);padding:22.5px;user-select:none">{{this.subname}}</p>
				{{/if}}
				<p class="w3-xlarge">{{this.name}}</p>
			</div>
			{{/each}}
		</div>
		{{else}}
		<h3 class="w3-xxlarge">You are not logged on!</h3>
		{{/if}}
	</main>
</body>
</html>
